          </ul>
        </aside>

        <div class="user-dashboard-container col-md-9 col-12 px-xl-4 px-3" role="main" aria-label="Booking list" style="min-height: 570px;">
          <h1 id="booking-heading">Booking Management</h1>
          <div class="booking-list-container pt-2" role="region" aria-labelledby="booking-heading">
            <% if (bookings && bookings.length > 0) { %> <%
            bookings.forEach(booking => { %>
            <div class="booking-card mb-3 p-xl-4 p-3" role="article" aria-labelledby="booking-<%= booking.id %>">
              <div
                class="booking-card-header d-flex justify-content-between align-items-center"
              >
                <span id="booking-<%= booking.id %>" class="booking-id">#<%= booking.id %></span>
                <% if (booking.status === 'confirmed') { %>
                <span class="booking-status-confirmed" aria-label="Booking status: Confirmed">Confirmed</span>
                <% } else if (booking.status === 'pending') {%>
                <span class="booking-status-pending" aria-label="Booking status: Pending">Pending</span>
                <% } else { %>
                <span class="booking-status-cancel" aria-label="Booking status: Cancelled">Cancel</span>
                <% } %>
              </div>
              <div class="booking-card-body">
                <div class="row">
                  <div class="col-12 col-md-6">
                    <div class="booking-info">
                      <strong>Service:</strong> <%= booking.service %>
                    </div>
                    <div class="booking-info">
                      <strong>Customer:</strong> <%= booking.userEmail %> (<%= booking.userName %>)
                    </div>
                    <div class="booking-date">
                      <strong>Booking Date:</strong> <%= new Date(booking.bookingDate).toDateString() %> <%= new Date(booking.bookingDate).toLocaleTimeString('en-US', { hour12: false, hour: '2-digit', minute: '2-digit', second: '2-digit' }) %>
                    </div>
                  </div>
                  <div class="col-12 col-md-6">
                    <div class="booking-info">
                      <strong>Date:</strong> <%= booking.tourDate %>
                    </div>
                  </div>
                </div>
              </div>
              <div class="booking-card-actions mt-2 d-flex gap-2 flex-wrap" role="group" aria-label="Booking actions for #<%= booking.id %>">
                <% if (booking.status === 'pending') { %>
                <button
                  class="btn btn-sm btn-primary flex-fill"
                  onclick="updateBookingStatus('<%= booking.id %>', 'approved')"
                  type="button"
                  aria-label="Approve booking #<%= booking.id %>"
                >
                  Approve
                </button>
                <button
                  class="btn btn-sm btn-danger flex-fill"
                  onclick="updateBookingStatus('<%= booking.id %>', 'cancel')"
                  type="button"
                  aria-label="Cancel booking #<%= booking.id %>"
                >
                  Cancel
                </button>
                <% } else if (booking.status === 'confirmed') { %>
                <button class="btn btn-sm btn-secondary flex-fill" disabled aria-label="Booking #<%= booking.id %> is confirmed">
                  Confirmed
                </button>
                <% } else { %>
                <button class="btn btn-sm btn-secondary flex-fill" disabled aria-label="Booking #<%= booking.id %> was cancelled">
                  Cancelled
                </button>
                <% } %>
              </div>
            </div>
            <% }) %> <% } else { %>
            <p role="status" aria-live="polite">You have no booked tours.</p>
            <% } %> <% if (pagination && pagination.totalPages > 1) { %>
            <nav
              aria-label="Booking list pagination"
              class="d-flex justify-content-center"
              role="navigation"
            >
              <ul class="pagination">
                <% if (pagination.hasPrevPage) { %>
                <li class="page-item">
                  <a class="page-link" href="?page=<%= pagination.prevPage %>" aria-label="Go to previous page"
                    >Previous</a
                  >
                </li>
                <% } else { %>
                <li class="page-item disabled">
                  <span class="page-link" aria-label="Previous page not available">Previous</span>
                </li>
                <% } %> <% let startPage = Math.max(1, pagination.currentPage -
                2); let endPage = Math.min(pagination.totalPages,
                pagination.currentPage + 2); if (endPage - startPage < 4) { if
                (startPage === 1) { endPage = Math.min(pagination.totalPages,
                startPage + 4); } else { startPage = Math.max(1, endPage - 4); }
                } for (let i = startPage; i <= endPage; i++) { %>
                <li
                  class="page-item <%= pagination.currentPage === i ? 'active' : '' %>"
                >
                  <a class="page-link" href="?page=<%= i %>" <% if (pagination.currentPage === i) { %>aria-current="page" aria-label="Current page <%= i %>"<% } else { %>aria-label="Go to page <%= i %>"<% } %>><%= i %></a>
                </li>
                <% } %> <% if (pagination.hasNextPage) { %>
                <li class="page-item">
                  <a class="page-link" href="?page=<%= pagination.nextPage %>" aria-label="Go to next page"
                    >Next</a
                  >
                </li>
                <% } else { %>
                <li class="page-item disabled">
                  <span class="page-link" aria-label="Next page not available">Next</span>
                </li>
                <% } %>
              </ul>
            </nav>
            <% } %>
          </div>
        </div>
      </div>
    </main>

    <%- include('../../partials/footer') %>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ndDqU0Gzau9qJ1lfW4pNLlhNTkCfHzAVBReH9diLvGRem5+R9g2FzA8ZGN954O5Q"
      crossorigin="anonymous"
    ></script>
    <script src="/js/user.js"></script>
    <script>
      async function updateBookingStatus(bookingId, action) {
        try {
          const endpoint = `/guide/booking/${bookingId}/${action}`;
          const response = await fetch(endpoint, {
            method: "POST",
            headers: {
              "Content-Type": "application/json",
            },
          });

          const result = await response.json();

          if (result.success) {
            if (action === "approved") {
              showNotification("You've confirmed this booking", "success");
              setTimeout(() => location.reload(), 1000);
            } else {
              showNotification("You've canceled this booking", "info");
              setTimeout(() => location.reload(), 1000);
            }
          } else {
            alert("Error: " + result.message);
          }
        } catch (error) {
          console.error("Error updating booking status:", error);
          alert("An error occurred while updating the booking status");
        }
      }
    </script>
  </body>
</html>
