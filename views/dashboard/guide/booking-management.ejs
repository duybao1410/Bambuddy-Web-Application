              role="none"
            >
              <a
                class="nav-link flex-fill"
                href="/guide/profile"
                role="menuitem"
                aria-label="My Profile"
                tabindex="0"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="16"
                  height="16"
                  fill="currentColor"
                  class="bi bi-person-circle me-2"
                  viewBox="0 0 16 16"
                  aria-hidden="true"
