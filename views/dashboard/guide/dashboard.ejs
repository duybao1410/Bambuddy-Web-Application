<!--  Guide Dashboard  -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Guide Dashboard | Bambuddy</title>

    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr"
      crossorigin="anonymous"
    />
    <!-- Bootstrap Icon -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css"
    />

    <!-- Google Font -->
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Be+Vietnam+Pro:wght@400;500;600;700&display=swap"
    />

    <!-- CSS Global Variable -->
    <link rel="stylesheet" href="/css/style.css" />
    <link rel="stylesheet" href="/css/theme.css" />

    <!-- CSS Style For Guide/User -->
    <link rel="stylesheet" href="/css/user.css" />
    <script src="/js/theme-loader.js"></script>
  </head>
  <body class="<%= user?.theme || 'light' %>">
    <%- include('../../partials/navbar') %>

    <div class="container-fluid p-3 p-md-5">
      <main
        id="main-content"
        class="user-page-container content-fluid row"
        role="main"
        aria-label="Guide Dashboard"
      >
        <aside
          class="user-sidebar-navigation col-12 col-md-3 px-0 pe-md-3 mb-4 mb-md-0"
          role="navigation"
          aria-label="Dashboard navigation"
        >
          <ul
            class="nav flex-column flex-md-column row-gap-2 p-2"
            role="menubar"
          >
            <li
              class="nav-item d-flex justify-content-start align-items-center"
              role="none"
            >
              <a
                class="nav-link active flex-fill"
                aria-current="page"
                href="/guide/dashboard"
                role="menuitem"
                aria-label="Overview - Current page"
                tabindex="0"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="16"
                  height="16"
                  fill="currentColor"
                  class="bi bi-kanban me-2"
                  viewBox="0 0 16 16"
                  aria-hidden="true"
                >
                  <path
                    d="M13.5 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1h-11a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1zm-11-1a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h11a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2z"
                  />
                  <path
                    d="M6.5 3a1 1 0 0 1 1-1h1a1 1 0 0 1 1 1v3a1 1 0 0 1-1 1h-1a1 1 0 0 1-1-1zm-4 0a1 1 0 0 1 1-1h1a1 1 0 0 1 1 1v7a1 1 0 0 1-1 1h-1a1 1 0 0 1-1-1zm8 0a1 1 0 0 1 1-1h1a1 1 0 0 1 1 1v10a1 1 0 0 1-1 1h-1a1 1 0 0 1-1-1z"
                  /></svg
                ><span>Overview</span></a
              >
            </li>
            <li
              class="nav-item d-flex justify-content-start align-items-center"
              role="none"
            >
              <a
                class="nav-link flex-fill"
                href="/guide/profile"
                role="menuitem"
                aria-label="My Profile"
                tabindex="0"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="16"
                  height="16"
                  fill="currentColor"
                  class="bi bi-person-circle me-2"
                  viewBox="0 0 16 16"
                  aria-hidden="true"
                >
                  <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0" />
                  <path
                    fill-rule="evenodd"
                    d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8m8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1"
                  /></svg
                ><span>My Profile</span></a
              >
            </li>
            <li
              class="nav-item d-flex justify-content-start align-items-center"
              role="none"
            >
              <a
                class="nav-link flex-fill"
                href="/guide/booking"
                role="menuitem"
                aria-label="Booking Management"
                tabindex="0"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="16"
                  height="16"
                  fill="currentColor"
                  class="bi bi-list-ul me-2"
                  viewBox="0 0 16 16"
                  aria-hidden="true"
                >
                  <path
                    fill-rule="evenodd"
                    d="M5 11.5a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9a.5.5 0 0 1-.5-.5m0-4a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9a.5.5 0 0 1-.5-.5m0-4a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9a.5.5 0 0 1-.5-.5m-3 1a1 1 0 1 0 0-2 1 1 0 0 0 0 2m0 4a1 1 0 1 0 0-2 1 1 0 0 0 0 2m0 4a1 1 0 1 0 0-2 1 1 0 0 0 0 2"
                  /></svg
                ><span>Booking Management</span></a
              >
            </li>
            <li
              class="nav-item d-flex justify-content-start align-items-center"
              role="none"
            >
              <a
                class="nav-link flex-fill"
                aria-current="page"
                href="/guide/settings"
                role="menuitem"
                aria-label="Settings"
                tabindex="0"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="16"
                  height="16"
                  fill="currentColor"
                  class="bi bi-gear-wide-connected me-2"
                  viewBox="0 0 16 16"
                  aria-hidden="true"
                >
                  <path
                    d="M7.068.727c.243-.97 1.62-.97 1.864 0l.071.286a.96.96 0 0 0 1.622.434l.205-.211c.695-.719 1.888-.03 1.613.931l-.08.284a.96.96 0 0 0 1.187 1.187l.283-.081c.96-.275 1.65.918.931 1.613l-.211.205a.96.96 0 0 0 .434 1.622l.286.071c.97.243.97 1.62 0 1.864l-.286.071a.96.96 0 0 0-.434 1.622l.211.205c.719.695.03 1.888-.931 1.613l-.284-.08a.96.96 0 0 0-1.187 1.187l.081.283c.275.96-.918 1.65-1.613.931l-.205-.211a.96.96 0 0 0-1.622.434l-.071.286c-.243.97-1.62.97-1.864 0l-.071-.286a.96.96 0 0 0-1.622-.434l-.205.211c-.695.719-1.888.03-1.613-.931l.08-.284a.96.96 0 0 0-1.186-1.187l-.284.081c-.96.275-1.65-.918-.931-1.613l.211-.205a.96.96 0 0 0-.434-1.622l-.286-.071c-.97-.243-.97-1.62 0-1.864l.286-.071a.96.96 0 0 0 .434-1.622l-.211-.205c-.719-.695-.03-1.888.931-1.613l.284.08a.96.96 0 0 0 1.187-1.186l-.081-.284c-.275-.96.918-1.65 1.613-.931l.205.211a.96.96 0 0 0 1.622-.434zM12.973 8.5H8.25l-2.834 3.779A4.998 4.998 0 0 0 12.973 8.5m0-1a4.998 4.998 0 0 0-7.557-3.779l2.834 3.78zM5.048 3.967l-.087.065zm-.431.355A4.98 4.98 0 0 0 3.002 8c0 1.455.622 2.765 1.615 3.678L7.375 8zm.344 7.646.087.065z"
                  /></svg
                ><span>Settings</span></a
              >
            </li>
          </ul>
        </aside>

        <div
          class="user-dashboard-container col-md-9 col-12"
          role="main"
          aria-label="Dashboard content"
        >
          <section class="overview-cards" aria-labelledby="overview-heading">
            <h2 id="overview-heading" class="dashboard-section-title pb-1 mb-3">
              Dashboard Overview
            </h2>
            <div
              class="row text-center"
              role="group"
              aria-label="Dashboard statistics"
            >
              <div class="col-12 col-xl-3 col-md-6 dashboard-card mb-3">
                <div
                  class="card p-3"
                  role="region"
                  aria-labelledby="total-bookings-heading"
                >
                  <div class="card-body">
                    <h3
                      id="total-bookings-heading"
                      aria-describedby="total-bookings-desc"
                    >
                      <%= dashboard.totalBookings %>
                    </h3>
                    <span id="total-bookings-desc">Total Bookings</span>
                  </div>
                </div>
              </div>
              <div class="col-12 col-xl-3 col-md-6 dashboard-card mb-3">
                <div
                  class="card p-3"
                  role="region"
                  aria-labelledby="avg-rating-heading"
                >
                  <div class="card-body">
                    <h3
                      id="avg-rating-heading"
                      aria-describedby="avg-rating-desc"
                    >
                      <%= dashboard.averageRating %>
                    </h3>
                    <span id="avg-rating-desc">Average Rating</span>
                  </div>
                </div>
              </div>
              <div class="col-12 col-xl-3 col-md-6 dashboard-card mb-3">
                <div
                  class="card p-3"
                  role="region"
                  aria-labelledby="monthly-earnings-heading"
                >
                  <div class="card-body">
                    <h3
                      id="monthly-earnings-heading"
                      aria-describedby="monthly-earnings-desc"
                    >
                      <%= dashboard.monthlyEarnings.toLocaleString('vi-VN') %>đ
                    </h3>
                    <span id="monthly-earnings-desc">This month (VND)</span>
                  </div>
                </div>
              </div>
              <div class="col-12 col-xl-3 col-md-6 dashboard-card mb-3">
                <div
                  class="card p-3"
                  role="region"
                  aria-labelledby="working-requests-heading"
                >
                  <div class="card-body">
                    <h3
                      id="working-requests-heading"
                      aria-describedby="working-requests-desc"
                    >
                      <%= dashboard.workingRequests %>
                    </h3>
                    <span id="working-requests-desc">Working Request</span>
                  </div>
                </div>
              </div>
            </div>
          </section>

          <section
            class="services-grid pt-4"
            aria-labelledby="services-heading"
          >
            <div
              class="user-dashboard-serviceheading-container pb-2 d-flex justify-content-between align-items-center"
            >
              <h3 id="services-heading" class="user-dashboard-service-heading">
                My Services
              </h3>
              <button
                class="btn-primary user-createtour-button py-2 px-3"
                aria-label="Create New Tour"
                type="button"
                tabindex="0"
              >
                + Create New Tour
              </button>
            </div>
            <div class="container">
              <div class="row pt-2">
                <!-- Tabs -->
                <ul
                  class="nav nav-tabs"
                  id="tourTabs"
                  role="tablist"
                  aria-label="Tour management tabs"
                >
                  <li class="nav-item" role="presentation">
                    <button
                      class="nav-link active"
                      id="active-tab"
                      data-bs-toggle="tab"
                      data-bs-target="#active-tab-pane"
                      type="button"
                      role="tab"
                      aria-controls="active-tab-pane"
                      aria-selected="true"
                      tabindex="0"
                      aria-label="Show active tours"
                    >
                      Active
                    </button>
                  </li>
                  <li class="nav-item" role="presentation">
                    <button
                      class="nav-link"
                      id="deleted-tab"
                      data-bs-toggle="tab"
                      data-bs-target="#deleted-tab-pane"
                      type="button"
                      role="tab"
                      aria-controls="deleted-tab-pane"
                      aria-selected="false"
                      tabindex="-1"
                      aria-label="Show deleted tours"
                    >
                      Deleted
                    </button>
                  </li>
                </ul>

                <!-- Tab Panes -->
                <div class="tab-content mt-2 ps-0">
                  <!-- Active -->
                  <div
                    class="tab-pane fade show active"
                    id="active-tab-pane"
                    role="tabpanel"
                    aria-labelledby="active-tab"
                    tabindex="0"
                  >
                    <div class="row pt-2">
                      <% tours.filter(tour => tour.isActive).forEach(tour => {
                      %>
                      <div class="col-12 col-md-6 col-xl-4 mb-4">
                        <div
                          class="service-card"
                          role="article"
                          aria-labelledby="active-tour-title-<%= tour._id %>"
                        >
                          <img
                            src="/uploads/tours/<%= tour.images && tour.images.length > 0 ? tour.images[0] : 'placeholder.jpg' %>"
                            class="service-card-img"
                            alt="<%= tour.title %> tour image"
                            loading="lazy"
                          />
                          <div class="service-card-body">
                            <h5
                              id="active-tour-title-<%= tour._id %>"
                              class="service-card-title"
                            >
                              <%= tour.title %>
                            </h5>
                            <p
                              class="service-card-text"
                              style="
                                display: -webkit-box;
                                -webkit-line-clamp: 3;
                                line-clamp: 3;
                                -webkit-box-orient: vertical;
                                overflow: hidden;
                                line-height: 1.4em;
                                max-height: 4.2em;
                              "
                            >
                              <%= tour.description %>
                            </p>
                            <div class="service-card-price">
                              <%= tour.pricing.toLocaleString('vi-VN') %>
                              VND/person
                            </div>
                            <div class="service-card-rating">
                              ⭐<%= tour.averageRating %>/5 (<%=
                              tour.rating.length %> reviews)
                            </div>
                            <div
                              class="service-card-actions"
                              role="group"
                              aria-label="Actions for <%= tour.title %>"
                            >
                              <button
                                class="btn-edit"
                                data-tour-id="<%= tour._id %>"
                                type="button"
                                aria-label="Edit <%= tour.title %> tour"
                                tabindex="0"
                              >
                                Edit
                              </button>
                              <button
                                class="btn-delete"
                                data-tour-id="<%= tour._id %>"
                                type="button"
                                aria-label="Delete <%= tour.title %> tour"
                                tabindex="0"
                              >
                                Delete
                              </button>
                            </div>
                          </div>
                        </div>
                      </div>
                      <% }) %>
                    </div>
                  </div>

                  <!-- Deleted -->
                  <div
                    class="tab-pane fade"
                    id="deleted-tab-pane"
                    role="tabpanel"
                    aria-labelledby="deleted-tab"
                    tabindex="0"
                  >
                    <div class="row pt-2">
                      <% tours.filter(tour => !tour.isActive).forEach(tour => {
                      %>
                      <div class="col-12 col-md-6 col-xl-4 mb-4">
                        <div
                          class="service-card"
                          role="article"
                          aria-labelledby="deleted-tour-title-<%= tour._id %>"
                        >
                          <img
                            src="/uploads/tours/<%= tour.images && tour.images.length > 0 ? tour.images[0] : 'placeholder.jpg' %>"
                            class="service-card-img"
                            alt="<%= tour.title %> tour image - deleted"
                            loading="lazy"
                          />
                          <div class="service-card-body">
                            <h5
                              id="deleted-tour-title-<%= tour._id %>"
                              class="service-card-title"
                            >
                              <%= tour.title %>
                            </h5>
                            <p
                              class="service-card-text"
                              style="
                                display: -webkit-box;
                                -webkit-line-clamp: 3;
                                line-clamp: 3;
                                -webkit-box-orient: vertical;
                                overflow: hidden;
                                line-height: 1.4em;
                                max-height: 4.2em;
                              "
                            >
                              <%= tour.description %>
                            </p>
                            <small
                              class="text-muted"
                              aria-label="Deleted on <%= new Date(tour.deletedAt).toLocaleDateString() %>"
                            >
                              Deleted on: <%= new
                              Date(tour.deletedAt).toLocaleDateString() %>
                            </small>
                            <div
                              class="service-card-actions"
                              role="group"
                              aria-label="Actions for deleted <%= tour.title %>"
                            >
                              <button
                                class="btn-restore"
                                data-tour-id="<%= tour._id %>"
                                type="button"
                                aria-label="Restore <%= tour.title %> tour"
                                tabindex="0"
                              >
                                Restore
                              </button>
                            </div>
                          </div>
                        </div>
                      </div>
                      <% }) %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </section>
        </div>
      </main>
    </div>
    <%- include('../../partials/footer') %>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ndDqU0Gzau9qJ1lfW4pNLlhNTkCfHzAVBReH9diLvGRem5+R9g2FzA8ZGN954O5Q"
      crossorigin="anonymous"
    ></script>

    <script src="/js/user.js"></script>
  </body>
</html>
