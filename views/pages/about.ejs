  <body class="<%= user?.theme || 'light' %>">
    <%- include('../partials/navbar') %>

    <div class="container my-lg-3">
      <!-- Hero -->
      <div class="header-container row">
        <div class="about-hero mx-0">
          <img
            src="/img/aboutUsHeader.png"
            alt="About Bambudy"
            class="img-fluid w-100"
          />
          <div class="hero-overlay">
            <h1>About Us</h1>
          </div>
        </div>
      </div>

      <div class="row main-content my-lg-3">
        <div class="col-lg-3">
          <div class="tabs-menu-container p-lg-3">
            <ul class="nav nav-pills flex-column" role="tablist">
              <li class="nav-item mb-3" role="presentation">
                <button
                  class="nav-link active"
                  id="about-bambuddy-tab"
                  data-bs-toggle="tab"
                  data-bs-target="#about-bambuddy-pane"
                  type="button"
                  role="tab"
                  aria-controls="about-bambuddy-pane"
                  aria-selected="true"
                >
                  About BamBuddy
                </button>
              </li>
              <li class="nav-item" role="presentation">
                <button
                  class="nav-link"
                  id="contact-us-tab"
                  data-bs-toggle="tab"
                  data-bs-target="#contact-us-pane"
                  type="button"
                  role="tab"
                  aria-controls="contact-us-pane"
                  aria-selected="false"
                >
                  Contact Us
                </button>
              </li>
            </ul>
          </div>
        </div>
        <div class="col-lg-9">
          <div class="tab-content">
            <!-- About Bambuddy -->
            <div
              class="tab-pane fade show active"
              id="about-bambuddy-pane"
              role="tabpanel"
              aria-labelledby="about-bambuddy-tab"
              tabindex="0"
            >
              <!-- About BamBuddy -->
              <div class="mb-5">
                <h3>About BamBuddy</h3>
                <p>
                  Founded with a passion for authentic travel experiences,
                  Bambuddy was born from the recognition that Vietnam's rich
                  cultural heritage and natural beauty deserved to be explored
                  through genuine local connections. We saw that international
                  travelers were struggling with fragmented services, language
                  barriers, and limited access to trustworthy, culturally
                  immersive experiences despite Vietnam welcoming nearly 18
                  million visitors annually.
                </p>
              </div>
              <!-- Purpose -->
              <div class="mb-5">
                <h3>Purpose</h3>
                <h4>Our Mission</h4>
                <p>
                  Bambuddy bridges the gap between curious travelers and
                  passionate local guides, creating a comprehensive platform
                  that simplifies travel planning while enriching cultural
                  exchange. We empower international visitors to explore Vietnam
                  confidently and meaningfully, while supporting local
                  communities through sustainable tourism practices.
                </p>
                <h4>What We Do</h4>
                <h5>For Travelers:</h5>
                <ul>
                  <li>Connect with verified, English-speaking local guides</li>
                  <li>
                    Access customizable itineraries tailored to your interests
                  </li>
                  <li>Read comprehensive reviews and detailed experiences</li>
                  <li>
                    Join a vibrant community of fellow travelers sharing tips
                    and stories
                  </li>
                </ul>
                <h5>For Tour Guides:</h5>
                <ul>
                  <li>Showcase your expertise and build your personal brand</li>
                  <li>Connect directly with international travelers</li>
                  <li>Manage bookings and schedules efficiently</li>
                  <li>
                    Access tools for professional growth and certification
                    verification
                  </li>
                </ul>
              </div>
              <!-- Team Roles -->
              <div class="mb-5">
                <h3>Our Team</h3>
                <div class="row">
                  <!-- Role 1 -->
                  <div class="col-md-6 col-lg-3 mb-4">
                    <div class="card h-100 shadow-sm text-center">
                      <img
                        src="/img/memberAvatar/ddm.JPG"
                        class="card-img-top img-fluid rounded-circle mx-auto mt-3"
                        style="width: 120px; height: 120px; object-fit: cover"
                        alt="Do Duc Minh"
                      />
                      <div class="card-body">
                        <h5 class="card-title">Do Duc Minh</h5>
                        <p>s4119196</p>
                      </div>
                    </div>
                  </div>

                  <!-- Role 2 -->
                  <div class="col-md-6 col-lg-3 mb-4">
                    <div class="card h-100 shadow-sm text-center">
                      <img
                        src="/img/memberAvatar/pdb.jpeg"
                        class="card-img-top img-fluid rounded-circle mx-auto mt-3"
                        style="width: 120px; height: 120px; object-fit: cover"
                        alt="Pham Duy Bao"
                      />
                      <div class="card-body">
                        <h5 class="card-title">Pham Duy Bao</h5>
                        <p>S4118510</p>
                      </div>
                    </div>
                  </div>

                  <!-- Role 3 -->
                  <div class="col-md-6 col-lg-3 mb-4">
                    <div class="card h-100 shadow-sm text-center">
                      <img
                        src="/img/memberAvatar/thien.png"
                        class="card-img-top img-fluid rounded-circle mx-auto mt-3"
                        style="width: 120px; height: 120px; object-fit: cover"
                        alt="Tran Chi Thien"
                      />
                      <div class="card-body">
                        <h5 class="card-title">Tran Chi Thien</h5>
                        <p>s4124555</p>
                      </div>
                    </div>
                  </div>

                  <!-- Role 4 -->
                  <div class="col-md-6 col-lg-3 mb-4">
                    <div class="card h-100 shadow-sm text-center">
                      <img
                        src="/img/memberAvatar/umd.jpg"
                        class="card-img-top img-fluid rounded-circle mx-auto mt-3"
                        style="width: 120px; height: 120px; object-fit: cover"
                        alt="Uong Minh Duc"
                      />
                      <div class="card-body">
                        <h5 class="card-title">Uong Minh Duc</h5>
                        <p>s4118758</p>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <!-- Contact Us -->
            <div
              class="tab-pane fade"
              id="contact-us-pane"
              role="tabpanel"
              aria-labelledby="contact-us-tab"
              tabindex="0"
            >
              <div class="feedback-form-container">
                <h3 class="mb-4">We'd Love to Hear From You!</h3>
                <p class="text-muted mb-4">
                  Your feedback helps us improve BamBuddy. Share your thoughts,
                  suggestions, or report any issues you've encountered.
                </p>

                <form class="feedback-form" method="POST" action="/feedback">
                  <div class="row">
                    <div class="col-md-6 mb-3">
                      <label for="firstName" class="form-label"
                        >First Name <span class="text-danger">*</span></label
                      >
                      <input
                        type="text"
                        class="form-control"
                        id="firstName"
                        name="firstName"
                        required
                      />
                    </div>
                    <div class="col-md-6 mb-3">
                      <label for="lastName" class="form-label"
                        >Last Name <span class="text-danger">*</span></label
                      >
                      <input
                        type="text"
                        class="form-control"
                        id="lastName"
                        name="lastName"
                        required
                      />
                    </div>
                  </div>

                  <div class="row">
                    <div class="col-md-6 mb-3">
                      <label for="email" class="form-label"
                        >Email Address <span class="text-danger">*</span></label
                      >
                      <input
                        type="email"
                        class="form-control"
                        id="email"
                        name="email"
                        required
                      />
                    </div>
                    <div class="col-md-6 mb-3">
                      <label for="phone" class="form-label">Phone Number</label>
                      <input
                        type="number"
                        class="form-control"
                        id="phone"
                        name="phone"
                        placeholder="+84 123 456 789"
                      />
                    </div>
                  </div>

                  <div class="mb-3">
                    <label for="feedbackType" class="form-label"
                      >Feedback Type <span class="text-danger">*</span></label
                    >
                    <select
                      class="form-select"
                      id="feedbackType"
                      name="feedbackType"
                      required
                    >
                      <option value="">Choose feedback type...</option>
                      <option value="general">General Feedback</option>
                      <option value="bug">Bug Report</option>
                      <option value="suggestion">Feature Suggestion</option>
                      <option value="complaint">Complaint</option>
                      <option value="compliment">Compliment</option>
                    </select>
                  </div>

                  <div class="mb-3">
                    <label for="subject" class="form-label"
                      >Subject <span class="text-danger">*</span></label
                    >
                    <input
                      type="text"
                      class="form-control"
                      id="subject"
                      name="subject"
                      placeholder="Brief description of your feedback"
                      required
                    />
                  </div>

                  <div class="mb-4">
                    <label for="message" class="form-label"
                      >Your Feedback <span class="text-danger">*</span></label
                    >
                    <textarea
                      class="form-control"
                      id="message"
                      name="message"
                      rows="6"
                      placeholder="Please provide detailed feedback..."
                      required
                    ></textarea>
                  </div>

                  <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <button
                      type="reset"
                      class="btn btn-outline-secondary me-md-2"
                    >
                      Clear Form
                    </button>
                    <button type="submit" class="btn btn-primary">
                      Submit Feedback
                    </button>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <%- include('../partials/footer') %>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ndDqU0Gzau9qJ1lfW4pNLlhNTkCfHzAVBReH9diLvGRem5+R9g2FzA8ZGN954O5Q"
      crossorigin="anonymous"
    ></script>
    <script>
      function showNotification(message, type = "info") {
        // Remove existing notifications
        const existingNotifications =
          document.querySelectorAll(".notification");
        existingNotifications.forEach((notification) => notification.remove());

        // Create new notification
        const notification = document.createElement("div");
        notification.className = `notification ${type}`;
        notification.textContent = message;
        document.body.appendChild(notification);

        // Show notification
        setTimeout(() => {
          notification.classList.add("show");
        }, 100);

        // Hide notification after 5 seconds
        setTimeout(() => {
          notification.classList.remove("show");
          setTimeout(() => {
            notification.remove();
          }, 300);
        }, 5000);
      }
      document.addEventListener("DOMContentLoaded", function () {
        const urlParams = new URLSearchParams(window.location.search);

        if (urlParams.get("success") === "feedback_submitted") {
          showNotification(
            "Feedback submitted successfully! Thank you for your input.",
            "success"
          );
        } else if (urlParams.get("error") === "submission_failed") {
          showNotification(
            "Failed to submit feedback. Please try again.",
            "error"
          );
        }
      });
    </script>
  </body>
</html>
